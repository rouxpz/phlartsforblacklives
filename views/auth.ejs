<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Admin Page</title>
    <link href="https://fonts.googleapis.com/css2?family=Karla:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/styles.css">
    <link href="img/favicon.ico" rel="icon" type="image/x-icon" />
  </head>
  <body>
    <div id="enterPassword">
      <form id="loginInfo" action="/admin" method="post">
        Enter password:<br>
        <input id="pw" type="text" name="pw" value="">
        <input class="button" type="submit" name="submitPw" value="Submit">
        <a href='/'><button id='backHome' class='button' type="button" name="button">Back to Letter</button></a>
      </form>
    </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script>
    $(function () {
      var socket = io();
      $('form').submit(function(e) {
        socket.emit('password', $('#pw').val());
      });
      $('#backHome').click(function(e) {
        socket.emit('logout', '');
      });
    });
  </script>
</body>
